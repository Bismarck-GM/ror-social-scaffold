<section class="users-section">
  <ul class="users-list">
    <% @users.each do |user| %>
      <li>
        Name: <%= user.name %>
        <span class="profile-link">
          <%= link_to 'Accept friend request', user_friendships_accept_path(user_id: user.id), method: :post, class: 'profile-link' %>
          <%= link_to 'Reject friend request', user_friendships_reject_path(user_id: user.id), method: :post, class: 'profile-link' %>
        </span>
      </li>
    <% end %>
  </ul>
</section>

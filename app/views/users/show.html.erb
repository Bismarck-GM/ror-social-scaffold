<section class="user-section">
  <h2><%= "Name: #{@user.name}" %></h2>
  <%= link_to user_friendships_path(@user), method: :post do %>
    <button>Invite to Friendship</button>
  <% end %>
  <article class="timeline">
    <h3>Recent posts:</h3>
    <ul class="posts">
      <%= render @posts %>
    </ul>
  </article>
</section>
